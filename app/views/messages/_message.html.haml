.entry
  .entry-message= auto_link(message.message)
  .entry-date
    =link_to(message.nickname.name, nickname_messages_url(message.nickname))
    |
    = message.created_at
    |
    = link_to('Delete', message_url(message), :method => :delete, :confirm => "Are you sure you want to delete #{message.nickname.name}'s message")