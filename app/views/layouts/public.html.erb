        <% Channel.all.each do |channel| %>
          <li><%= link_to( channel.name, channel_messages_path(channel)) %></li>
        <% end %>
      </ul>
      <div id='sidebar-bottom'>
        &nbsp;
      </div>
  </div>
  
	<div id="content">
    <%= yield %>
	</div>

